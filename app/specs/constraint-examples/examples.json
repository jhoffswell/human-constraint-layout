// Tree Layout

"constraints": [
  {
    "name": "layer",
    "set": {"property": "depth"},
    "constraints": [{ "type": "align", "axis": "x" }]
  },
  {
    "name": "ordered",
    "from": ["layer"],
    "constraints": [{ "type": "order", "axis": "y", "by": "depth" }]
  }
]

// Sorted Tree Layout

"constraints": [
  {
    "name": "layer",
    "set": {"property": "depth"},
    "constraints": [
      { "type": "align", "axis": "x" },
      { "type": "order", "axis": "x", "by": "_id" }
    ]
  },
  {
    "name": "ordered",
    "from": ["layer"],
    "constraints": [{ "type": "order", "axis": "y", "by": "depth" }]
  }
]

// Customized Cluster Hierarchy

"constraints": [
  {
    "name": "cluster",
    "set": {"property": "type"},
    "constraints": [
      { "type": "order", "axis": "x", "by": "_id" },
      { "type": "align", "axis": "x" }
    ]
  },
  {
    "name": "layer",
    "from": "cluster",
    "constraints": [
      { 
        "type": "order", 
        "axis": "y", 
        "by": "type", 
        "order": ["carnivore", "herbivore", "plant"]
      }
    ]
  }
]

// Flow Layout

"constraints": [
  {
    "name": "layer",
    "set": {"property": "parent"},
    "constraints": [
      { "type": "position", "position": "right", "of": "parent.x" }
    ]
  },
  {
    "name": "ordered",
    "from": "layer",
    "constraints": [{ "type": "order", "axis": "y", "by": "depth" }]
  }
]

// Only align one of the layers

"constraints": [
  {
    "name": "cluster",
    "set": {"property": "type"}
  },
  {
    "name": "layer",
    "from": ["cluster"],
    "constraints": [
      { 
        "type": "order", 
        "axis": "y", 
        "by": "type", 
        "order": ["carnivore", "herbivore", "plant"]
      }
    ]
  },
  {
    "name": "outer",
    "set": [
      {"expr": "datum.type == 'plant'", "name": "plant"},
      {"expr": "datum.type == 'carnivore'", "name": "carnivore"}
    ],
    "constraints": [{ "type": "align", "axis": "x" }]
  }
]

// 

"constraints": [
  {
    "name": "clusters",
    "set": [
      {"expr": "datum.type == 'orange'"},
      {"expr": "datum.type =='green'"}
    ]
  },
  {
    "name": "cold",
    "set": [
      {"expr": "datum.type =='green'"}, 
      {"expr": "datum.type == 'blue'"}, 
      {"expr": "datum.type == 'purple'"}
    ]
  },
  {
    "name": "warm",
    "set": [{"expr": "datum.type == 'red'"}, {"expr": "datum.type == 'orange'"}]
  },
  {
    "name": "redorange",
    "from": ["warm"],
    "constraints": [
      {"type": "order", "axis": "x", "by": "type", "order": ["orange", "red"]}
    ]
  },
  {
    "name": "layer",
    "from": ["cold"],
    "constraints": [
      { 
        "type": "order", 
        "axis": "x", 
        "by": "type", 
        "order": ["green", "blue", "purple"]
      }
    ]
  },
  {
    "name": "layer",
    "from": ["clusters"],
    "constraints": [
      { 
        "type": "order", 
        "axis": "y", 
        "by": "type", 
        "order": ["orange", "green"]
      }
    ]
  }
]

//

"constraints": [
  {
    "name": "cluster",
    "set": [{"expr": "datum.incoming.length == 0"}],
    "constraints": [
        {"type": "align", "axis": "x"}
    ]
  },
  {
    "name": "cluster",
    "set": [{"expr": "datum.incoming.length == 0"}, {"expr": "datum.incoming.length >= 1"}],
    "constraints": [
        {"type": "order", "axis": "y", "by": "degree"}
    ]
  }
]

// aligned Tree
"constraints": [
    {
      "name": "layer",
      "set": {"property": "depth"},
      "constraints": [{ "type": "align", "axis": "x" }]
    },
    {
      "name": "position",
      "set": {"property": "firstchild"},
      "constraints": [
        { "type": "align", "axis": "x" }
      ]
    },
    {
      "name": "ordered",
      "from": ["layer"],
      "constraints": [{ "type": "order", "axis": "y", "by": "depth" }]
    }
  ]